<?xml version="1.0" encoding="UTF-8" ?>
<persistence
    xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
    version="2.0">

    <persistence-unit name="data-platform-account-properties">
        <description>
            This persistence unit is used to access account information such as ESI credentials
        </description>
        
        <class>enterprises.orbital.db.DBProperty</class>
        <class>enterprises.orbital.evekit.account.GeneralSequenceNumber</class>
        <class>enterprises.orbital.evekit.account.EveKitUserAccount</class>
        <class>enterprises.orbital.evekit.account.EveKitUserAuthSource</class>
        <class>enterprises.orbital.evekit.account.SynchronizedAccountAccessKey</class>
        <class>enterprises.orbital.evekit.account.SynchronizedEveAccount</class>
        <class>enterprises.orbital.evekit.account.ESIToken</class>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="${enterprises.orbital.evekit.dataplatform.db.account.driver}"/>
            <property name="javax.persistence.jdbc.url" value="${enterprises.orbital.evekit.dataplatform.db.account.url}"/>
            <property name="javax.persistence.jdbc.user" value="${enterprises.orbital.evekit.dataplatform.db.account.user}"/>
            <property name="javax.persistence.jdbc.password" value="${enterprises.orbital.evekit.dataplatform.db.account.password}"/>
            <property name="hibernate.dialect" value="${enterprises.orbital.evekit.dataplatform.db.account.dialect}"/>
            <property name="hibernate.show_sql" value="false" />
            <property name="hibernate.format_sql" value="false" />

            <property name="hibernate.c3p0.min_size" value="5"/>
            <property name="hibernate.c3p0.max_size" value="20"/>
            <property name="hibernate.c3p0.timeout" value="300"/>
            <property name="hibernate.c3p0.max_statements" value="50"/>
            <property name="hibernate.c3p0.idle_test_period" value="10000"/>
        </properties>

    </persistence-unit>

    <persistence-unit name="data-platform-registry-properties">
        <description>
            This persistence unit is used to access EveKit data source registry properties.
        </description>

        <class>enterprises.orbital.db.DBProperty</class>
        <class>enterprises.orbital.evekit.dataplatform.DataSource</class>
        <class>enterprises.orbital.evekit.dataplatform.DataSourceUpdateTracker</class>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="${enterprises.orbital.evekit.dataplatform.db.registry.driver}"/>
            <property name="javax.persistence.jdbc.url" value="${enterprises.orbital.evekit.dataplatform.db.registry.url}"/>
            <property name="javax.persistence.jdbc.user" value="${enterprises.orbital.evekit.dataplatform.db.registry.user}"/>
            <property name="javax.persistence.jdbc.password" value="${enterprises.orbital.evekit.dataplatform.db.registry.password}"/>
            <property name="hibernate.dialect" value="${enterprises.orbital.evekit.dataplatform.db.registry.dialect}"/>
            <property name="hibernate.show_sql" value="false" />
            <property name="hibernate.format_sql" value="false" />

            <property name="hibernate.c3p0.min_size" value="5"/>
            <property name="hibernate.c3p0.max_size" value="20"/>
            <property name="hibernate.c3p0.timeout" value="300"/>
            <property name="hibernate.c3p0.max_statements" value="50"/>
            <property name="hibernate.c3p0.idle_test_period" value="10000"/>
        </properties>

    </persistence-unit>

</persistence>
